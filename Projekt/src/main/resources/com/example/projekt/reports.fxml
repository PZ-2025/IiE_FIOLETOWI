<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projekt.ReportController"
      fx:id="reportRoot"
      spacing="20"
      styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Nagłówek -->
    <Label text="Raporty"
           styleClass="header-label"/>

    <!-- Wybór głównego typu raportu -->
    <HBox spacing="10">
        <ComboBox fx:id="mainReportTypeComboBox"
                  promptText="Wybierz typ raportu"
                  styleClass="combo-box"/>
    </HBox>

    <!-- Dynamiczna sekcja filtrów -->
    <VBox fx:id="filterContainer" spacing="10">
    </VBox>

    <!-- Przycisk generowania raportu -->
    <HBox spacing="10">
        <Button text="Generuj raport"
                onAction="#generateReport"
                styleClass="primary-button"/>
        <Button text="Zapisz do PDF"
                onAction="#saveReportAsPDF"
                styleClass="return-button"/>
        <Button text="Wyczyść filtry"
                onAction="#clearFilters"
                styleClass="secondary-button"/>
    </HBox>

    <!-- Podgląd raportu -->
    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="reportPreviewContainer" spacing="10">
            <TableView fx:id="reportTableView">
                <columns/>
            </TableView>
        </VBox>
    </ScrollPane>

    <!-- Przycisk powrotu -->
    <Button text="Powrót do menu głównego"
            onAction="#goBackToDashboard"
            styleClass="return-button"
            alignment="CENTER"/>
</VBox>
