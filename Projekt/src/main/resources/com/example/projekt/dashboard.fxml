<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projekt.DashboardController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #6a1b9a, #9c27b0);">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Dashboard"
           style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>

    <Label fx:id="usernameLabel"
           text="Witaj, użytkowniku"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <Label fx:id="roleLabel"
           text="Rola: "
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <Button text="Panel użytkownika"
            onAction="#goToUserTaskPanel"
            style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-size: 14px;
              -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;
              -fx-background-radius: 5; -fx-cursor: hand;"/>


    <Button text="Zarządzaj zadaniami"
            onAction="#goToTaskManager"
            style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-size: 14px;
                  -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;
                  -fx-background-radius: 5; -fx-cursor: hand;"
            fx:id="taskManagerButton"/>

    <Button text="Raporty"
            onAction="#goToReports"
            style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-size: 14px;
              -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;
              -fx-background-radius: 5; -fx-cursor: hand;"
            fx:id="reportButton"/>


    <Button fx:id="adminButton"
            text="Zarządzaj użytkownikami"
            onAction="#goToUserManagement"
            style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-size: 14px;
                  -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 5;
                  -fx-background-radius: 5; -fx-cursor: hand;"/>
</VBox>
