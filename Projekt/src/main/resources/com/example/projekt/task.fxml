<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="com.example.projekt.TaskController"
            style="-fx-background-color: linear-gradient(to bottom right, #4a148c, #7b1fa2);">

    <top>
        <Label text="Panel Kierownika - Zarządzanie Zadaniami"
               style="-fx-font-size: 24px; -fx-text-fill: white; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="taskTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nazwa"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                    <TableColumn fx:id="priorityColumn" text="Priorytet"/>
                    <TableColumn fx:id="startDateColumn" text="Start"/>
                    <TableColumn fx:id="endDateColumn" text="Koniec"/>
                    <TableColumn fx:id="assignedColumn" text="Pracownik"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Label text="Nazwa:"/>
                <TextField fx:id="nameField" promptText="Wpisz nazwę"/>

                <Label text="Status:"/>
                <ComboBox fx:id="statusBox"/>

                <Label text="Priorytet:"/>
                <ComboBox fx:id="priorityBox"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Data startu:"/>
                <DatePicker fx:id="startDatePicker"/>

                <Label text="Data końca:"/>
                <DatePicker fx:id="endDatePicker"/>

                <Label text="Przypisz do:"/>
                <ComboBox fx:id="employeeBox"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Dodaj zadanie" onAction="#handleAddTask"/>
                <Button text="Edytuj zadanie" onAction="#handleEditTask"/>
                <Button text="Usuń zadanie" onAction="#handleDeleteTask"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <Button text="Powrót do Dashboardu"
                onAction="#goBackToDashboard"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10;"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
