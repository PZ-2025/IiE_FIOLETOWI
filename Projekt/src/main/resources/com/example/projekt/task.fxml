<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projekt.TaskController"
            style="-fx-background-color: linear-gradient(to bottom right, #6a1b9a, #9c27b0);">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label text="Zarządzanie zadaniami (Admin)"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20"
              style="-fx-padding: 20; -fx-background-color: rgba(255,255,255,0.9);
                     -fx-border-radius: 10; -fx-background-radius: 10;">

            <!-- Form do tworzenia/edycji zadania -->
            <GridPane hgap="10" vgap="10">
                <Label text="Nazwa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="taskInput" promptText="Nazwa zadania"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Priorytet:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="priorityComboBox" promptText="Wybierz priorytet"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Data:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Użytkownik:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="userComboBox" promptText="Wybierz użytkownika"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Button text="Dodaj zadanie"
                        onAction="#handleAddTask"
                        style="-fx-background-color: #7b1fa2; -fx-text-fill: white;"
                        GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Lista zadań -->
            <Label text="Lista zadań:" style="-fx-font-weight: bold;"/>
            <TableView fx:id="taskTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nazwa" />
                    <TableColumn fx:id="priorityColumn" text="Priorytet" />
                    <TableColumn fx:id="dateColumn" text="Data" />
                    <TableColumn fx:id="userColumn" text="Użytkownik" />
                    <TableColumn fx:id="statusColumn" text="Status" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Button text="Usuń zadanie"
                    onAction="#handleDeleteTask"
                    style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Oznacz jako zakończone"
                    onAction="#handleMarkAsCompleted"
                    style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Powrót do Dashboardu"
                    onAction="#goBackToDashboard"
                    style="-fx-background-color: #3949ab; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
