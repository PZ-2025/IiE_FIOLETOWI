<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projekt.UserTaskPanelController"
            fx:id="userTaskRoot"
            styleClass="root">

    <top>
        <Label text="Panel użytkownika - Twoje zadania"
               styleClass="header-label"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" styleClass="content-box">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Tabela z produktami -->
            <Label text="Dostępne produkty:" styleClass="section-label"/>
            <TableView fx:id="productTable" prefHeight="150">
                <columns>
                    <TableColumn fx:id="productNameColumn" text="Nazwa"/>
                    <TableColumn fx:id="productStockColumn" text="Stan"/>
                    <TableColumn fx:id="productLimitColumn" text="Limit stanu"/>
                    <TableColumn fx:id="productPriceColumn" text="Cena"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Tabela z zadaniami -->
            <Label text="Twoje zadania:" styleClass="section-label"/>
            <TableView fx:id="taskTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nazwa"/>
                    <TableColumn fx:id="statusColumn" text="Status"/>
                    <TableColumn fx:id="priorityColumn" text="Priorytet"/>
                    <TableColumn fx:id="dateColumn" text="Data"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <HBox spacing="10">
                <Label text="Zmień status:" styleClass="label"/>
                <ComboBox fx:id="statusComboBox" promptText="Wybierz status" styleClass="combo-box"/>
                <Button text="Zapisz zmiany" onAction="#changeTaskStatus" styleClass="primary-button"/>
            </HBox>

            <Label text="Komentarz do zadania:" styleClass="section-label"/>
            <TextArea fx:id="commentTextArea" prefHeight="100" promptText="Tutaj możesz wpisać komentarz do zadania..." styleClass="input-field"/>

            <Button text="Zapisz komentarz" onAction="#saveTaskComment" styleClass="primary-button"/>

            <Label text="Zadania do zatwierdzenia:" styleClass="section-label"/>
            <ListView fx:id="historyList" prefHeight="100" styleClass="list-view"/>
        </VBox>
    </center>

    <!--<bottom>
        <Button text="Powrót do Dashboardu"
                onAction="#goToDashboard"
                styleClass="return-button"
                BorderPane.alignment="CENTER"/>
    </bottom>-->
</BorderPane>
