<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.projekt.ProductManagementController"
      fx:id="productRoot"
      spacing="10"
      styleClass="root">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="nazwaField" promptText="Nazwa produktu" styleClass="input-field"/>
        <TextField fx:id="stanField" promptText="Stan" styleClass="input-field"/>
        <TextField fx:id="cenaField" promptText="Cena" styleClass="input-field"/>
        <TextField fx:id="limitField" promptText="Limit" styleClass="input-field"/>
        <ComboBox fx:id="typComboBox" promptText="Typ produktu" styleClass="combo-box"/>
        <Button text="Zapisz" onAction="#saveProduct" styleClass="primary-button"/>
        <Button text="Wyczyść" onAction="#clearForm"/>
    </HBox>

    <TableView fx:id="productTable">
        <columns>
            <TableColumn fx:id="nazwaColumn" text="Nazwa"/>
            <TableColumn fx:id="stanColumn" text="Stan"/>
            <TableColumn fx:id="cenaColumn" text="Cena"/>
            <TableColumn fx:id="limitColumn" text="Limit"/>
            <TableColumn fx:id="typColumn" text="Typ"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Dodaj produkt" onAction="#handleAddProduct" styleClass="primary-button"/>
        <Button text="Usuń zaznaczony produkt" onAction="#handleDeleteProduct" styleClass="danger-button"/>
    </HBox>

    <!--<Button text="Powrót do menu głównego"
            onAction="#goBackToDashboard"
            styleClass="return-button"
            alignment="CENTER"/>-->
</VBox>
