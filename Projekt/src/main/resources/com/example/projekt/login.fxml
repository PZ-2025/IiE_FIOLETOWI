<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="12"
          vgap="12"
          fx:controller="com.example.projekt.LoginController"
          style="-fx-background-color: #ffffff; -fx-font-family: 'Segoe UI', sans-serif;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Nagłówek -->
    <Label text="HurtPolSan"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #4a148c;
                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.2, 2, 2);"
           GridPane.columnSpan="2"
           GridPane.rowIndex="0"
           GridPane.halignment="CENTER"/>

    <!-- Etykieta użytkownika -->
    <Label text="Nazwa użytkownika:"
           style="-fx-font-size: 14px; -fx-text-fill: #333333;"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"/>

    <!-- Pole użytkownika -->
    <TextField fx:id="usernameField"
               promptText="Wpisz login"
               style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc;
                      -fx-border-radius: 6; -fx-background-radius: 6;
                      -fx-padding: 8; -fx-font-size: 14px;"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"/>

    <!-- Etykieta hasła -->
    <Label text="Hasło:"
           style="-fx-font-size: 14px; -fx-text-fill: #333333;"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"/>

    <!-- Pole hasła -->
    <PasswordField fx:id="passwordField"
                   promptText="Wpisz hasło"
                   style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc;
                          -fx-border-radius: 6; -fx-background-radius: 6;
                          -fx-padding: 8; -fx-font-size: 14px;"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

    <!-- Przycisk logowania -->
    <Button text="Zaloguj"
            onAction="#handleLogin"
            defaultButton="true"
            style="-fx-background-color: #7b1fa2; -fx-text-fill: white; -fx-font-size: 14px;
                   -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 6;
                   -fx-background-radius: 6; -fx-cursor: hand;"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"/>

    <!-- Komunikat błędu -->
    <Label fx:id="messageLabel"
           style="-fx-text-fill: #d32f2f; -fx-font-size: 13px;"
           GridPane.rowIndex="4"
           GridPane.columnSpan="2"
           GridPane.halignment="CENTER"/>

</GridPane>
